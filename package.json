{
  "name": "remix-chop-suey-stack",
  "description": "Remix+EdgeDB+Tailwind+Fly=ğŸ–¤",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "remix:dev": "remix dev",
    "remix:build": "remix build",
    "dev": "run-p dev:'*' remix:dev",
    "dev-with-mocks": "run-p dev:'*' mocks:dev",
    "dev:css": "yarn generate:css --watch",
    "build": "run-s build:'*' remix:build",
    "build:css": "yarn generate:css --minify",
    "mocks:dev": "ts-node -r ./mocks ./node_modules/.bin/remix dev",
    "mocks:build": "tsc mocks/*.ts --outDir build/mocks",
    "generate:edge": "run-p generate:edge:'*'",
    "generate:edge:edgeql": "npx @edgedb/generate edgeql-js --force-overwrite --output-dir ./app/db/edgeql",
    "generate:edge:types": "npx @edgedb/generate interfaces --force-overwrite --file ./app/db/types.ts",
    "generate:css": "tailwindcss -i ./app/styles/main.css -o ./app/styles/tailwind.css",
    "db:migrate": "edgedb migrate && yarn generate:edge",
    "start": "remix-serve build",
    "start-with-mocks": "node -r dotenv/config -r ./build/mocks ./node_modules/.bin/remix-serve build",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest --passWithNoTests",
    "test:cov": "vitest --coverage --passWithNoTests",
    "test:e2e:dev": "start-server-and-test 'yarn dev-with-mocks' http://localhost:3000 'yarn cypress open'",
    "test:e2e:run": "PORT=8811 start-server-and-test 'yarn start-with-mocks' http://localhost:8811 'yarn cypress run'",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "dependencies": {
    "@clerk/remix": "^1.4.8",
    "@headlessui/react": "^1.7.7",
    "@remix-run/node": "^1.10.0",
    "@remix-run/react": "^1.10.0",
    "@remix-run/serve": "^1.10.0",
    "@remix-run/server-runtime": "^1.10.0",
    "daisyui": "^2.46.1",
    "dotenv": "^16.0.3",
    "edgedb": "^1.0.2",
    "isbot": "^3.6.5",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.6.2",
    "remix-params-helper": "^0.4.10",
    "remix-utils": "^5.2.1",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "@clerk/clerk-js": "^4.22.1",
    "@clerk/clerk-sdk-node": "^4.5.14",
    "@edgedb/generate": "^0.0.7-beta.2",
    "@faker-js/faker": "^7.6.0",
    "@remix-run/dev": "^1.10.0",
    "@remix-run/eslint-config": "^1.10.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.4.10",
    "@types/lodash-es": "^4",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-react": "^3.0.1",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "cypress": "^12.3.0",
    "esbuild": "^0.16.16",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "happy-dom": "^8.1.3",
    "msw": "^0.49.2",
    "prettier": "2.8.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "start-server-and-test": "^1.15.2",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.27.0"
  },
  "engines": {
    "node": ">=17"
  },
  "packageManager": "yarn@1.22.0"
}
